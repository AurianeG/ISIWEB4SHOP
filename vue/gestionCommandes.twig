{% extends "base.html.twig" %}
{% block contenu %}
<p>Petit rappel des correspondances de code status :</p>
    <ul>
        <li>0 L'utilisateur ajoute toujours des articles à son panier.</li>
        <li>1 L'utilisateur a entré son adresse.</li>
        <li>2 L'utilisateur a payé pour l'article.</li>
        <li>10 L'administrateur a confirmé la transaction et envoyé la commande.</li>
    </ul>
    <table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>customer_id</th>
            <th>status</th>
            <th>Type de payment</th>
            <th>Total</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
    {% for order in orders %}
        <tr>
            <td>{{ order["id"] }}</td>
            <td>{{ order.customer_id }} </td>
            <td>{{ order.status }}</td>
            <td>{{ order.payment_type }}</td>
            <td>{{ order.total|number_format(2,',') }} €</td>
            <td><a href="index.php?page=detailCommande&order_id={{order.id}}">Details</a></td>
        </tr>
    {% endfor %}
    
    </table>
{% endblock %}
